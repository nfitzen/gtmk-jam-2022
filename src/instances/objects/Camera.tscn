[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform vec3 dark = vec3(0f, 0f, 0f);
uniform vec3 med = vec3(0f, 1f, 0.5f);
uniform vec3 light = vec3(1f, 1f, 1f);

vec4 rgb_from_hsl(float h, float s, float l) {
    float chroma = (1f - abs(2f * l)) * s;
    float hp = h * 6f;
    float x = chroma * (1f - abs(mod(hp, 2f) - 1f));
    vec4 rgb = vec4(0f,0f,0f,1.0f);
    if(0f < hp && hp <= 1f) {
        rgb += vec4(chroma, x, 0f, 0f);
    } else if(1f < hp && hp <= 2f) {
        rgb += vec4(x, chroma, 0f, 0f);
    } else if(2f < hp && hp <= 3f) {
        rgb += vec4(0f, chroma, x, 0f);
    } else if(3f < hp && hp <= 4f) {
        rgb += vec4(0f, x, chroma, 0f);
    } else if(4f < hp && hp <= 5f) {
        rgb += vec4(x, 0f, chroma, 0f);
    } else {
        rgb += vec4(chroma, 0f, x, 0f);
    }
    float m = l - chroma * 0.5;
    rgb += vec4(m,m,m,0f);
    return rgb;
}

void fragment() {
    vec4 bg = texture(SCREEN_TEXTURE, SCREEN_UV);
    float avg = (bg.r + bg.g + bg.b) / 3.0f;
    if(avg < 0.5f) {
        COLOR = rgb_from_hsl(dark.x + avg * 2f * (med.x - dark.x), dark.y + avg * 2f * (med.y - dark.y), dark.z + avg * 2f * (med.z - dark.z));
    } else {
        COLOR = rgb_from_hsl(med.x + (avg - 0.5f) * 2f * (light.x - med.x), med.y + (avg - 0.5f) * 2f * (light.y - med.y), med.z + (avg - 0.5f) * 2f * (light.z - med.z));
    }
    
}"

